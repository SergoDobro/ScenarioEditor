<UserControl x:Class="RedactorBeta.ElementAndBooleans"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RedactorBeta"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel >
        <DockPanel Margin="1" >
            <Button x:Name="CollapseButton" Content ="▶"  VerticalAlignment="Center" Click="Button_Click" 
                    BorderThickness="0" Background="Transparent"/>
            <Label x:Name="contentName" Content="Test" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <CheckBox Margin="2,0,1,0" VerticalAlignment="Center"
                          x:Name="isVisible" IsChecked="{Binding isVisible}" Checked="Save"
                          ToolTip="Виден ли файл пользователю"/>
                <CheckBox Margin="1,0,2,0" VerticalAlignment="Center"
                          x:Name="hasPassword" IsChecked="{Binding hasPassword}" Checked="Save"
                          ToolTip="Есть ли пароли"/>
                <ComboBox Width="200" 
                          BorderThickness="0"
                          Background="Transparent"
                          SelectedIndex="0"
                          x:Name="loginsAndPasswords"
                          IsEnabled="{Binding hasPassword}"
                          ToolTip="Список паролей">
                    <StackPanel  HorizontalAlignment="Right">
                        <Button Content="➕" Click="Button_Click_1" 
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" 
                            HorizontalAlignment="Right" Margin="2,0,2,0"
                                ToolTip="Добавить логин с паролем"/>
                    </StackPanel>
                </ComboBox>
            </StackPanel>
        </DockPanel>

        <StackPanel Orientation="Vertical" x:Name="panel">
            
        </StackPanel>
    </StackPanel>
</UserControl>
