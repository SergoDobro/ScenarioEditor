<UserControl x:Class="RedactorBeta.ComboBoxInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RedactorBeta"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel >
        <TextBox Text="{Binding Item1}"  MinWidth="30"
                                 Margin="2,0,2,0"
                TextChanged="TextBox_TextChanged"
                 x:Name="login"/>
        <TextBox Text="{Binding Item2}"  MinWidth="30"
                                 Margin="2,0,2,0"
                TextChanged="TextBox_TextChanged" 
                 x:Name="password"/>
        <Button Content="✖" Click="Button_Click"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Right" Margin="2,0,2,0"/>
    </DockPanel>
</UserControl>
