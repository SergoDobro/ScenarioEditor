<Window x:Class="RedactorBeta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedactorBeta"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer CanContentScroll="True">
        <StackPanel>
            <DockPanel>
                <Button Content="Save Scenario" Width="150" HorizontalAlignment="Left" Margin="20,5,5,5"/>
                <Button Content="Load Scenario (And save current)" Width="200" HorizontalAlignment="Left" Margin="20,5,5,5"/>
            </DockPanel>
            <local:ElementAndBooleans OnOpen="ElementAndBooleans_OnOpen"/>
        </StackPanel>
    </ScrollViewer>
</Window>
